<Window x:Class="DBManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Logowanie do systemu" Height="400" Width="550" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">

            <TextBlock Text="Autoryzacja" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Label Content="Imię Pracownika:"/>
            <TextBox x:Name="txtImie" Height="30" Margin="0,0,0,10" Padding="2"/>

            <Label Content="Email Pracownika:"/>
            <TextBox x:Name="txtEmail" Height="30" Margin="0,0,0,20" Padding="2"/>

            <Button x:Name="btnLogin" Content="ZALOGUJ" Height="40" Click="BtnLogin_Click" Background="#DDDDDD" FontWeight="Bold"/>

            <Separator Margin="0,20,0,10"/>
            <TextBlock Text="lub" HorizontalAlignment="Center" Foreground="Gray" Margin="0,0,0,10"/>

            <Button x:Name="btnGuest" Content="WEJDŹ BEZ LOGOWANIA (GOŚĆ)" Height="30" Click="BtnGuest_Click" Background="#EEEEEE"/>

        </StackPanel>
    </Grid>
</Window>
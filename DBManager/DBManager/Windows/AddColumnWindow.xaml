<Window x:Class="DBManager.AddColumnWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodawanie nowej kolumny" Height="250" Width="350" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">

            <Label Content="Nazwa nowej kolumny:" FontWeight="Bold"/>
            <TextBox x:Name="txtName" Height="30" Margin="0,0,0,15" Padding="2"/>

            <Label Content="Typ danych:" FontWeight="Bold"/>
            <ComboBox x:Name="cbType" Height="30" Margin="0,0,0,25" SelectedIndex="0">
                <ComboBoxItem Content="Tekst (String)" Tag="text"/>
                <ComboBoxItem Content="Liczba całkowita (Integer)" Tag="integer"/>
                <ComboBoxItem Content="Liczba z przecinkiem (Numeric)" Tag="numeric"/>
                <ComboBoxItem Content="Data (Date)" Tag="date"/>
                <ComboBoxItem Content="Logiczny (Boolean)" Tag="boolean"/>
            </ComboBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Anuluj" Width="90" Height="30" Margin="0,0,10,0" Click="BtnCancel_Click"/>
                <Button Content="DODAJ" Width="90" Height="30" FontWeight="Bold" Background="#DDDDDD" Click="BtnAdd_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
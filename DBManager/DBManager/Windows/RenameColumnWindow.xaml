<Window x:Class="DBManager.RenameColumnWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zmiana nazwy kolumny" Height="200" Width="300" WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <StackPanel VerticalAlignment="Center">

            <TextBlock x:Name="lblOldName" Text="Stara nazwa: ..." Margin="0,0,0,10" FontWeight="Bold"/>

            <Label Content="Nowa nazwa:"/>
            <TextBox x:Name="txtNewName" Height="25" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Anuluj" Width="80" Margin="0,0,10,0" Click="BtnCancel_Click"/>
                <Button Content="ZMIEŃ" Width="80" FontWeight="Bold" Click="BtnSave_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>